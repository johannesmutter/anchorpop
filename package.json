{
	"name": "anchorpop",
	"version": "1.0.0",
	"description": "Create self-positioning popovers with native CSSâ€”no JavaScript required in Svelte 5: popovers, tooltips, dropdowns and any floating UI components.",
	"author": "Johannes Mutter",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johannesmutter/anchorpop.git"
	},
	"bugs": {
		"url": "https://github.com/johannesmutter/anchorpop/issues"
	},
	"homepage": "https://anchorpop.fly.dev",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:package": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-node": "^5.2.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^22",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"popover",
		"tooltip",
		"dropdown",
		"anchor",
		"css-anchor-positioning",
		"positioning",
		"overlay",
		"menu",
		"context-menu",
		"floating-ui",
		"popper",
		"ui",
		"components"
	]
}
